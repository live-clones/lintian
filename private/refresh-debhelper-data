use v5.20;
use warnings;
use utf8;

use Cwd qw(realpath);
use File::Basename qw(dirname);

# neither Path::This nor lib::relative are in Debian
use constant THISFILE => realpath __FILE__;
use constant THISDIR => dirname realpath __FILE__;

# use Lintian modules that belong to this program
use lib THISDIR . '/../lib';

use Const::Fast;
use Unicode::UTF8 qw(encode_utf8);

use Lintian::Profile;

$ENV{LINTIAN_BASE} = realpath(THISDIR . '/..')
  // die encode_utf8('Cannot resolve LINTIAN_BASE');

my $basedir = 'data';

die encode_utf8("Basedir does not exist at $basedir\n")
  unless -e $basedir;

my $profile = Lintian::Profile->new;
$profile->load;

my $addons = $profile->debhelper_addons;
$addons->refresh($basedir);

my $commands = $profile->debhelper_commands;
$commands->refresh($basedir);

exit;

sub usage {
    my $message =<<"EOF_EOF_EOF";
Usage: $0

The program will download the following files from https://deb.debian.org:

* main/Contents-all.gz
* main/Contents-amd64.gz
* main/binary-amd64/Packages.gz
* Installable packages found in Contents that ship dh_ commands
EOF_EOF_EOF

    print encode_utf8($message);

    return;
}

