name = unpack-srcpkg-xz
dir  = $(name)-1.0

all:
	-mkdir $(dir)
	echo 'Some upstream README' > $(dir)/README
	tar -c -f $(name)_1.0.orig.tar.xz --xz $(dir)
	cp -rp debian/ $(dir)/
	touch $(dir)/debian/watch
	echo 'Information about patching' > $(dir)/debian/README.source
	dpkg-source -sp -b $(dir)

clean:
	rm -rf $(dir)
	rm -f $(name)_1.0*
